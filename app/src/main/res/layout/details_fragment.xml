                android:id="@+id/fromAsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.levare.verificare.util.RobotoText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Quantity Breakup"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.levare.verificare.util.RobotoText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="In Use"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edInUse"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:inputType="number">

                </EditText>

                <com.levare.verificare.util.RobotoText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Not In Use"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edNotInUse"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:inputType="number">

                </EditText>

                <com.levare.verificare.util.RobotoText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Not Found "
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edNotFound"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:inputType="number" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black" />
            </LinearLayout>

            <com.levare.verificare.util.RobotoText
                android:id="@+id/tvSelectCondn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:text="Select Condition"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/spinner_background">
                <Spinner
                    android:id="@+id/spConditionBase"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/condition"
                    android:prompt="@string/condition_prompt" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/black" />
            <com.levare.verificare.util.RobotoText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Select Reason or remark for Asset not in use / not in proper condition / Not in batch"
                android:textColor="#FF3333"
                android:gravity="center"
                android:textSize="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/black" />
            <com.levare.verificare.util.RobotoText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:text="Select Reason "
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/spinner_background">
                <Spinner
                    android:id="@+id/spSelctReson"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:prompt="@string/prompt"
                    android:spinnerMode="dropdown"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>


            <com.levare.verificare.util.RobotoText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Remark"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />

            <EditText
                android:id="@+id/EdRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:padding="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/spinner_background" />

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circular_corroner_background_balck_blue"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>